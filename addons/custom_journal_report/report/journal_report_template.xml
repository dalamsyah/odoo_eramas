<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <template id="journal_report_template">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <div style="margin-bottom:20px;">
                    <h3>Journal Entry: <t t-esc="o.name"/></h3>
                    <p>Date: <t t-esc="o.date"/></p>
                    <p>Journal: <t t-esc="o.journal_id.name"/></p>
                    <table style="width:100%; border:1px solid black; border-collapse: collapse;">
                        <tr>
                            <th style="border:1px solid black;">Account</th>
                            <th style="border:1px solid black;">Debit</th>
                            <th style="border:1px solid black;">Credit</th>
                        </tr>
                        <t t-foreach="o.line_ids" t-as="line">
                            <tr>
                                <td style="border:1px solid black;"><t t-esc="line.account_id.code"/> - <t t-esc="line.account_id.name"/></td>
                                <td style="border:1px solid black;"><t t-esc="line.debit"/></td>
                                <td style="border:1px solid black;"><t t-esc="line.credit"/></td>
                            </tr>
                        </t>
                    </table>
                </div>
            </t>
        </t>
    </template>
</odoo>