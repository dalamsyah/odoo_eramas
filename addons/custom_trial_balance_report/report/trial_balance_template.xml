<odoo>
    <template id="trial_balance_template">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <h2>Trial Balance</h2>
                <table class="table table-sm">
                    <thead>
                        <tr>
                            <th>Account</th>
                            <th>Debit</th>
                            <th>Credit</th>
                            <th>Balance</th>
                        </tr>
                    </thead>
                    <tbody>
                        <t t-foreach="o.get_lines({}, {})" t-as="line">
                            <tr>
                                <td><t t-esc="line['name']"/></td>
                                <td><t t-esc="line['columns'][0]"/></td>
                                <td><t t-esc="line['columns'][1]"/></td>
                                <td><t t-esc="line['columns'][2]"/></td>
                            </tr>
                        </t>
                    </tbody>
                </table>
            </t>
        </t>
    </template>
</odoo>
